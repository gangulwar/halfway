<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="@string/goodMorning"
        android:textColor="@color/white"
        android:textSize="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="@string/location"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/white_map_pin" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/dm_sans"
                android:text="@string/yourLocation"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/friendsLocation"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/white_map_pin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/yourLocation"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/friendsLocation"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/radius"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.slider.Slider
            android:id="@+id/radiusSlider"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:valueFrom="100"
            android:valueTo="10000" />

        <TextView
            android:id="@+id/radiusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/radius"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/dm_sans"
        android:text="@string/find"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="375dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/button"
            android:drawableLeft="@drawable/dining_and_drinking"
            android:fontFamily="@font/dm_sans_medium"
            android:text="@string/diningAndDrinking"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:background="@drawable/border_radius"
            android:drawablePadding="15dp"/>

        <Button
            android:layout_width="275dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/button"
            android:drawableLeft="@drawable/dining_and_drinking"
            android:fontFamily="@font/dm_sans_medium"
            android:text="Entertainment"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:background="@drawable/border_radius"
            android:drawablePadding="15dp"/>

        <Button
            android:layout_width="375dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/button"
            android:drawableLeft="@drawable/dining_and_drinking"
            android:fontFamily="@font/dm_sans_medium"
            android:text="Landmarks and Outdoors"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:background="@drawable/border_radius"
            android:drawablePadding="15dp"/>

    </LinearLayout>

</LinearLayout>